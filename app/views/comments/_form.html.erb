<%= form_for([@product, @product.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %><br />
    
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>