<p id="notice"><%= notice %></p>

<div class="jumbotron" id="surfshop">
  <div class="container">
    <h1>Surf Shop</h1>
    <p>Browse for your perfect surf equipment. You can also sell your boards and eqipment here.</p>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td class="btn btn-info"><%= link_to 'Show', product %></td>
        <td class="btn btn-default"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Product', new_product_path %>

